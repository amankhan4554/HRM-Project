@model HumanResourceManagementSystem.Models.Department

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/css/deleteemployee.css" rel="stylesheet" />
<div class="main-content">
    <div class="container-fluid content-top-gap">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-breadcrumb">
                <li class="breadcrumb-item"><a href="~/attendance/index" style="color:darkblue">Attendance</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete-Attendance</li>
            </ol>
        </nav>

    </div>


    <div class="dl-horizontal">
        <h2>Delete Department</h2>
        <h3>Are you sure you want to delete this?</h3>
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartmentName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartmentDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartmentDescription)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
                <i class="fa fa-arrow-circle-o-left"> &nbsp;@Html.ActionLink("Back to List", "Index")</i>
                <label class="permission">*** You don't have any Permission to Delete Department ***</label>
            </div>
        }
    </div>
</div>