@model HumanResourceManagementSystem.Models.Department

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/css/detailemployee.css" rel="stylesheet" />
<div class="main-content">
    <div class="container-fluid content-top-gap">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-breadcrumb">
                <li class="breadcrumb-item"><a href="~/Department/Index" style="color:darkblue">Departments</a></li>
                <li class="breadcrumb-item active" aria-current="page">Detail-Department</li>
            </ol>
        </nav>

    </div>


    <div class="dl-horizontal">
        <h2>Details Departmet</h2>
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartmentName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartmentDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartmentDescription)
            </dd>

        </dl>
        <p class="btn-default">
            <i class="fa fa-pencil-square-o"> &nbsp;@Html.ActionLink("Edit", "Edit", new { id = Model.DepartmentId })</i>
            <i class="fa fa-arrow-circle-o-left">&nbsp; @Html.ActionLink("Back to List", "Index")</i>
        </p>
    </div>
    
</div>