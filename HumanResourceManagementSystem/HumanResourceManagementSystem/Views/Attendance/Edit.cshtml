@model HumanResourceManagementSystem.Models.Attendance

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@*<link href="~/css/editemployee.css" rel="stylesheet" />
    <link href="~/css/help.css" rel="stylesheet" />*@
<link href="~/css/editform.css" rel="stylesheet" />
<div class="main-content">
    <div class="container-fluid content-top-gap">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-breadcrumb">
                <li class="breadcrumb-item"><a href="~/Attendance/Index" style="color:darkblue">Attendances</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit-Attendance</li>
            </ol>
        </nav>

    </div>
    <div class="form-block">
        <h2>Edit Attendance Information</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.AttendanceId)
            <div class="container">
                <div class="contacts12-main">
                    <div class="main-input2">

                        <div>
                            @Html.LabelFor(model => model.EmployeeId, "User ID", htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.DropDownList("EmployeeId", null, htmlAttributes: new { @class = "contact-input" })
                            @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "contact-input", @required = "required", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>


                    </div>
                    <div>
                        <label style="font-size:14px medium; font-weight:600;">Present  : </label>
                        @Html.RadioButtonFor(m => m.Status, "Present", new { @class = "Present", @required = "required", })&nbsp;&nbsp;&nbsp;&nbsp;
                        <label style="font-size:14px medium; font-weight:600;">Absent :</label>
                        @Html.RadioButtonFor(m => m.Status, "Absent", new { @class = "Absent", @required = "required", })
                    </div>
                    <div>
                        @Html.LabelFor(model => model.WorkDetail, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div>
                            @Html.EditorFor(model => model.WorkDetail, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "contact-textarea",
                            data_val_minlength_min = "20",
                                    data_val_minlength = "Work Details is Too Small",
                                      data_val_maxlength_max = "225",
                                    data_val_maxlength = "Work Details is Too Large"
                                }
                            })
                            @Html.ValidationMessageFor(model => model.WorkDetail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                            <i class="fa fa-arrow-circle-o-left">&nbsp; @Html.ActionLink("Back to List", "Index")</i>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Validation {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
