@model IEnumerable<HumanResourceManagementSystem.Models.Employee>
@{
    ViewBag.Title = "List";
    Layout = null;

}

<link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<script src="~/js/jsprint/jquery-3.5.1.js"></script>
<script src="~/js/jsprint/jquery.dataTables.min.js"></script>
<script src="~/js/jsprint/dataTables.buttons.min.js"></script>
<script src="~/js/jsprint/jszip.min.js"></script>
<script src="~/js/jsprint/pdfmake.min.js"></script>
<script src="~/js/jsprint/vfs_fonts.js"></script>
<script src="~/js/jsprint/buttons.html5.min.js"></script>
<script src="~/js/jsprint/buttons.print.min.js"></script>
<div class="display-2">
    <h2 style=" font-size: 50px; text-align: center;">Employee List </h2>

    <table id="EmployeeTable" style="width:95%" class="table table-responsive">
        <thead>
            <tr>
                <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Salary</th>
                <th>Mobile</th>
                <th>Depart Name</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateOFBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpSalary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <script>
        $(document).ready(function () {
            $('#EmployeeTable').DataTable({
                pageLength: 10,
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<i class="fa fa-files-o"></i> Copy',
                        title: 'Alfa Employee List'
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel-o"></i> Excel',
                        filename: function () {
                            var d = new Date();
                            var n = d.getTime();
                            return 'AlfaOrigin' + n;
                        },
                        title: 'Alfa Employee List'
                    },
                    
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fa fa-file-pdf-o"></i> PDF',
                        filename: function () {
                            var d = new Date();
                            var n = d.getTime();
                            return 'AlfaOrigin' + n;
                        },
                        title: 'Alfa Employee List'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> Print',
                        filename: function () {
                            var d = new Date();
                            var n = d.getTime();
                            return 'AlfaOrigin' + n;
                        },
                        title: 'Alfa Employee List'
                    },
                ]
            });
        });
    </script>
</div>